@model HW8.Models.ViewModels.ItemViewModel
@{
    ViewBag.Title = "Add Item";
}

<h2>Add Item</h2>

<div class="wrapper">
    @using (Html.BeginForm("Create", "Item", FormMethod.Post))
    {
        <form>
            <div class="row">
                <div class="form-group col-md-3">
                    @Html.DisplayNameFor(model => model.Name)
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "First Name" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-3">
                    @Html.DisplayNameFor(model => model.SellerName)
                    @Html.DropDownListFor(
                        x => x.SellerName,
                        new SelectList(ViewBag.Sellers, "Key", "Value"),
                        "Select Seller Name",
                        new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-9">
                    @Html.DisplayNameFor(model => model.Description)
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 10 })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-3">
                    <button type="submit" class="btn btn-default">Submit Request</button>
                </div>
            </div>
        </form>
    }
</div>