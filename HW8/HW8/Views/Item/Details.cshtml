@using HW8.Models.ViewModels
@model ListItemViewModel

@{
    ViewBag.Title = "Item Details and Bids";
}

@section scripts
{
    <script type="text/javascript" src="~/Scripts/bidUpdate.js"></script>
}

<h3>Item Details and Bids</h3>

<div class="wrapper">
    <div class="row"><b>@Html.DisplayNameFor(m => m.ItemId)</b>: @Model.ItemId</div>
    <div class="row"><b>@Html.DisplayNameFor(m => m.SellerName)</b>: @Model.SellerName</div>
    <div class="row"><b>@Html.DisplayNameFor(m => m.Name)</b>: @Model.Name</div>
    <div class="row"><b>@Html.DisplayNameFor(m => m.Description)</b>: @Model.Description</div>
</div>

@* Pass item ID to bidUpdate.js *@
@Html.Hidden("id", Model.ItemId)

<div id="bids">
    @*Partial view updated by ajax call in bidUpdate.js*@
</div>